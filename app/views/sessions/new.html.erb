
<header class="page-header">
  <h1>Login</h1>
</header>

<div class="row">
  <div class="col-sm-6">
    <%= form_tag 'login' do %>
    <% if @error %>
      <div class="alert alert-danger">
        <%= @error %>
      </div>
    <% end %>
      <div class="form-group">
      <div>Email:</div>
      <%= text_field_tag :email%>
      </div>

      <div class="form-group">
      <div>Password:</div>
      <%= password_field_tag :password%>
      </div>

      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>