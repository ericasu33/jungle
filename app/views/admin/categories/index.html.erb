<section>

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', new_admin_category_path, class: 'btn btn-info' %>
  </div>

  <div class="container-fluid">
    <table class="table table-bordered">
      <thead>
        <tr class="d-flex">
          <th class="col">Categories</th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
        <tr class="d-flex">
          <td class="col">
            <%= category.name %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</section>
